{% extends 'base.html.twig' %}

{% block principal %}
	<div class="container">
		<h2>Registrar Nuevo Asociado</h2>
		{% if mensaje is defined and mensaje %}
			<div class="alert alert-info">{{ mensaje }}</div>
		{% endif %}
		<form method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="nombre">Nombre:</label>
				<input type="text" name="nombre" id="nombre" class="form-control" required value="{{ nombre|default('') }}">
			</div>
			<div class="form-group">
				<label for="descripcion">Descripci√≥n (opcional):</label>
				<textarea name="descripcion" id="descripcion" class="form-control">{{ descripcion|default('') }}</textarea>
			</div>
			<div class="form-group">
				<label for="logo">Logo:</label>
				<input type="file" name="logo" id="logo" class="form-control" accept="image/*" required>
			</div>
			<button type="submit" class="btn btn-primary">Registrar Asociado</button>
		</form>
	</div>
{% endblock %}
